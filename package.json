{
  "name": "@acongmr/rollup",
  "version": "0.0.1",
  "description": "rollup study",
  "main": "./dist/index.js",
  "types": "./dist/type/index.d.ts",
  "type": "module",
  "scripts": {
    "lint": "eslint 'src/**/*.{js,ts,tsx}'",
    "build": "npm run clear && npm run build:code",
    "build:prod": "npm run clear && NODE_ENV=production  npm run build:code",
    "build:watch": "npm run tsc:watch & npm run rollup:watch",
    "build:code": "rm -rf dist/* && npm run tsc & npm run rollup",
    "clear": "rm -rf dist/*",
    "rollup": "rollup -c rollup.config.js",
    "rollup:watch": " rollup -c -w",
    "tsc": "tsc -p tsconfig.json",
    "tsc:watch": "tsc --watch",
    "tsc:types": "tsc ./src --description --emitDeclarationOnly --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Acongm/rollup.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Acongm/rollup/issues"
  },
  "homepage": "https://github.com/Acongm/rollup#readme",
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@rollup/plugin-babel": "^6.0.2",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-json": "^5.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.1.0",
    "@rollup/plugin-typescript": "^9.0.2",
    "acorn-jsx": "^5.3.2",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "react-jsx": "^1.0.0",
    "rollup": "^3.3.0",
    "rollup-plugin-css-only": "^4.3.0",
    "rollup-plugin-import": "^1.1.1",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-postcss": "^3.0.0",
    "rollup-plugin-replace": "^2.2.0",
    "tslib": "^2.4.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "preact": "^10.11.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*./src/**/*.{js,ts,json,css,less,md}": [
      "prettier --write",
      "yarn lint"
    ]
  }
}
